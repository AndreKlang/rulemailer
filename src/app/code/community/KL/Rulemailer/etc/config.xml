<?xml version="1.0"?>
<config>
    <modules>
        <KL_Rulemailer>
            <version>0.0.2</version>
        </KL_Rulemailer>
    </modules>
    <global>
        <helpers>
            <rulemailer>
                <class>KL_Rulemailer_Helper</class>
            </rulemailer>
        </helpers>
        <models>
            <rulemailer>
                <class>KL_Rulemailer_Model</class>
            </rulemailer>
            <core>
                <rewrite>
                    <email_template>KL_Rulemailer_Model_Email_Template</email_template>
                </rewrite>
            </core>
        </models>
        <events>
            <customer_address_save_after>
                <observers>
                    <customer_save_after_handler>
                        <type>model</type>
                        <class>rulemailer/observer</class>
                        <method>addressUpdate</method>
                        <args></args>
                    </customer_save_after_handler>
                </observers>
            </customer_address_save_after>
            <newsletter_subscriber_save_commit_after>
                <observers>
                    <newsletter_subscriber_save_before_handler>
                        <type>model</type>
                        <class>rulemailer/observer</class>
                        <method>manageSubscription</method>
                        <args></args>
                    </newsletter_subscriber_save_before_handler>
                </observers>
            </newsletter_subscriber_save_commit_after>
        </events>
    </global>
</config>
